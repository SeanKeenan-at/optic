{
  "compilerOptions": {
    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2017",
    "lib": ["es2017", "dom", "es2019"],

    "baseUrl": "./workspaces",
    "paths": {
      "@useoptic/cli": ["./local-cli/src"],
      "@useoptic/*": ["./*/src"]
    }
  }
}
